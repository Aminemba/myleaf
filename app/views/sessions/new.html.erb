<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <div class="mt-4 pt-5">

    <div class="form-group w-25 mx-auto my-4 border rounded p-4 bg-light shadow-sm">
      <h2 class="text-center">Login</h2>
      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email, placeholder:"Email", class:"form-control" %>
      </div>
      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder:"password", class:"form-control" %>
      </div>
      <div class="actions text-center mt-4">
        <%= form.submit "Login", class:"btn btn-info rounded-pill shadow-sm" %>
      </div>
      <div class="field text-center">
        <p>If you don't have account, <b class="text-info"><%= link_to "Signup", new_user_path %></b></p>
      </div>
    </div>
  </div>
<% end %>
